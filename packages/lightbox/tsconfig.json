{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    //"outDir": "dist"
    "baseUrl": ".",
    "allowJs": true, // import external js files
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@workspace/lightbox/*": ["./src/*"],
      "react": ["./node_modules/@types/react"],
      "@workspace/ui/*": ["../ui/src/*"],
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
